<link rel="stylesheet" type="text/css" href="/vendor/webuploader/webuploader.css">


<div class="container">

<ol class="breadcrumb">
        <li><a href="/">主页</a><span class="divider"></span></li>
        
        <li class="active">发布照片</li>
        
      </ol>
  <h1 align="center">发照片</h1>

<form method="post" action="/create-photo" class="form-horizontal"  >
     <input type="hidden" id="domain" value="{{Domain}}">
        <input type="hidden" id="uptoken_url" value="{{Uptoken_Url}}">

<div class="form-group">
    <label for="inputEmail3" class="col-sm-1 control-label">类别：</label>
    <div class="col-sm-10">
<select class="form-control" name="category">
   <option value="0"  >请选择</option>

  {{#each category}}
   <option value="{{name}}" >{{text}}</option>
  {{/each}}
</select>    </div>
  </div>



 <div class="form-group">
    <label for="title" class="col-sm-1 control-label">标题：</label>
    <div class="col-sm-10">
<input class="form-control" type="text" name="title" placeholder="标题" />    </div>
  </div>

    <div class="form-group">
    <label for="title" class="col-sm-1 control-label">简介：</label>
    <div class="col-sm-10">
    <input class="form-control" type="text" name="discrib" placeholder="标题" />    </div>
    </div>

        <div class="form-group">
    <label for="title" class="col-sm-1 control-label">售价：</label>
    <div class="col-sm-10">
    <input class="form-control" type="text" name="price" placeholder="0" />    </div>
    </div>


<!-- <p><input class="form-control" type="text" name="tage" placeholder="标签" /> </p>
 -->

     <div class="form-group">
    <label for="title" class="col-sm-1 control-label">图片：</label>
    <div class="col-sm-10">
                <div id="container">

<a class="btn btn-default btn-lg " id="pickfiles" href="#" >
                    <i class="glyphicon glyphicon-plus"></i>
                    <span>选择图片</span>
                </a></div>
  </div>  </div>



        <div style="display:none" id="success" class="col-md-12">
            <div class="alert-success">
                队列全部文件处理完毕
            </div>
        </div>
        <div class="col-md-12 ">
            <table class="table table-striped table-hover text-left"   style="margin-top:40px;display:none">
                <thead>
                  <tr>
                    <th class="col-md-4">Filename</th>
                    <th class="col-md-2">Size</th>
                    <th class="col-md-6">Detail</th>
                  </tr>
                </thead>
                <tbody id="fsUploadProgress">
                </tbody>
            </table>
        </div>


  <p align="center"><button class="pull-center btn btn-success btn-large" type="submit">发布</button> </p>


</div>

</form>


</div>


<!--引入JS-->
<script type="text/javascript" src="/vendor/qiniu/qiniu.js"></script>
<script src="/vendor/js/plupload.full.min.js"></script>
<script src="/page/photo-upload.js"></script>
