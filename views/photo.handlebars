<div class="container" id="{{currentCategory}}">

  <ul class="subNav clearfix">
    <li role="presentation" class="all"><a href="javascript:;" onclick="showPicture('fresh')">最新</a></li>
    <li class="all"><a href="javascript:;" onclick="showPicture('popular')">本周热门</a></li>
    <li class="btn-group pull-right ">
      <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
              aria-expanded="false"><strong>所有类别</strong> <span class="caret"></span></button>
      <ul class="dropdown-menu">
        <li><a href="javascript:;" onclick="showPicture()">所有类别</a></li>
        <li role="separator" class="divider"></li>
        <li><a href="javascript:;" onclick="showPicture(null,'art')">风光</a></li>
        <li><a href="javascript:;" onclick="showPicture(null,'street')">街拍</a></li>
        <li><a href="javascript:;" onclick="showPicture(null,'travel')">人像</a></li>
        <li><a href="javascript:;" onclick="showPicture(null,'fashion')">时尚</a></li>
      </ul>
    </li>
  </ul>
</div>

<!-- Tab panes -->
<div class="tab-content" id="pic-container">
  <div role="tabpanel" class="tab-pane active" id="new_pic">
    <div id="basicExample">
    </div>
  </div>

  <script type="text/javascript">
    my.showRecommend = {{showRecommend}} ;
    my.classify = null;
    my.categories = null;
    my.basicExample = $('#basicExample');
    my.pageNo = 1;

    $(function () {
      //下拉加载图片
      pullDownToLoadMore(function () {
        showPicture(null, null, true);
      });
    });

    function showPicture(classify, categories, mark) {
      if (classify) {
        my.classify = classify;
      }
      if (categories) {
        my.categories = categories;
      }
      if (!mark) {
        my.pageNo = 1;
        my.basicExample.html('');
      }
      my.ajax({
        url: "/photo/list/classify",
        type: 'get',
        data: {classify: my.classify, categories: my.categories, pageNo: my.pageNo},
        success: function (list) {
          var html = '';
          my.pageNo++;
          if (list.length == 0) {
            return;
          }

          for (var i = 0, length = list.length; i < length; i++) {

            var randomWidth = parseInt(Math.random() * 400 + 300);
            var item = list[i];
            var pic = item.pictures[0];
            var userAvatar = item.userAvatar || 'http://himg.bdimg.com/sys/portrait/item/99d3e7ac91e69fb3e58d8ae9a699e5889d402e.jpg';
            html += '<div class="album-wrapper jg-entry">';
            html += '<div class="album-number">' + item.pictures.length + '张</div>';
            html += '<a href="/photo/' + item._id + '"><img src="' + pic + '?imageView2/1/w/' + randomWidth + '/"/></a>';
            html += '<div class="album-description">';
            html += '<a class="belong-icon-wrapper" href="/user/1242142134">';
            html += '<img class="belong-icon" src="' + userAvatar + '" alt=""/></a>';
            html += '<a class="a-txt belong-name" href="/user/12454324">' + item.userName + '</a>';

            if (my.showRecommend) {
              if (item.recommend) {
                html += '<a class="a-txt tuijian" href="javascript:;" data-id="' + item._id + '">已推荐</a>';
              } else {
                html += '<a class="a-txt tuijian" href="javascript:;" data-id="' + item._id + '">推荐</a>';
              }
            }
            html += '</div>';
            html += '</div>';
          }

          if (mark) {
            my.basicExample.append(html);
          } else {
            my.basicExample.html(html);
          }

          tuijian();

          my.basicExample.justifiedGallery({
            rowHeight: 350,
            lastRow: 'nojustify',
            margins: 10
          });
        }
      });

    }

    function tuijian() {
      //推荐
      $('.tuijian').click(function () {
        var _this = $(this);
        var id = _this.data('id');
        alert(id);
        my.ajax({
          url: "/photo/list/recommend",
          type: 'get',
          data: {id: id},
          success: function (list) {
            _this.text('已推荐');
          }
        });
      });
    }

    //展示图片
    showPicture();

    function pullDownToLoadMore(callback) {
      var $win = $(window);
      var $doc = $(document);
      var totalheight = 0;
      var range = 50;
      var maxnum = 10000;
      var num = 1;
      $win.scroll(function () {
        totalheight = parseFloat($win.height()) + parseFloat($win.scrollTop());
        if ($doc.height() - range <= totalheight && num <= maxnum) {
          num++;
          if (typeof callback === 'function') {
            callback();
          }
        }
      });
    }

  </script>