<style>
  .album-wrapper {
    position: relative;
  }

  .album-number {
    position: absolute;
    color: #fff;
    top: 10px;
    right: 10px;
    z-index: 2;

  }

  .album-description {
    position: absolute;
    width: 100%;
    bottom: 5px;
    vertical-align: middle;
  }

  .album-description a {
    float: left;
    display: block;
    text-decoration: none;
