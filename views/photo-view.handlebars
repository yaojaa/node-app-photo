        </div>
    </div>

    <div class="g-right-cnt">
        <div class="u-header">
            <div class="headpic">
                <a href="/userspace/{{author.id}}"><img width="50" src="{{author.avatar}}?imageView2/1/w/50/"></a>
            </div>
            <div class="name nowrap">{{author.nickname}}</div>
            <div class="m-flow">
                {{#if authorIsNotSelf}}

                    {{#if isFollow}}
